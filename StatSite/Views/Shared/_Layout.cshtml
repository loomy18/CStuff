@{
    ViewBag.AppTitleAcro = "LOLSA";
    ViewBag.AppTitleFull = "LoL Statisics Archive";
    ViewBag.AppAuthors = "Loomis & McDonald";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content=@ViewBag.AppTitleFull>
    <meta name="author" content=@ViewBag.AppAuthors>

    <title>@ViewBag.AppTitleAcro</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Application core CSS -->
    <link href="~/Content/base-theme.css" rel="stylesheet">

    <!-- Font CSS -->
    <link href="~/Content/fontStyles.css" rel="stylesheet">

    <!-- Layout CSS -->
    <link href="~/Content/Layout.css" rel="stylesheet">

</head>
<body class="app-fill-mediumgray" role="document">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">@ViewBag.AppTitleFull</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href=@Url.Action("Index", "Home")>Home</a></li>
                    <li><a href=@Url.Action("Index", "Account")>Account</a></li>
                    <li><a href=@Url.Action("Login", "Account")>Login</a></li>
                    <li><a href=@Url.Action("Register", "Account")>Register</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">Analysis <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href=@Url.Action("Index", "Analysis")>Action A</a></li>
                            <li><a href=@Url.Action("Index", "Analysis")>Action B</a></li>
                            <li><a href=@Url.Action("Index", "Analysis")>Action C</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
                        <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                            @using (Html.BeginForm("ValidateUser", "Account", FormMethod.Post))
                            {
                                <input id="UsernameNav" placeholder="Username" style="margin-bottom: 15px;" type="text" name="Username" size="30" />
                                <input id="PasswordNav" placeholder="Password" style="margin-bottom: 15px;" type="password" name="Password" size="30" />
                                <input id="RememberMeNav" style="float: left; margin-right: 10px;" type="checkbox" name="RememberMe" value="1" />
                                <label class="string optional" for="user_remember_me"> Remember me</label>

                                <input class="btn btn-primary" style="clear: left; width: 100%; height: 32px; font-size: 13px;" type="submit" name="commit" value="Sign In" />
                            }
                        </div>
                    </li>
                    <li><a href=@Url.Action("Logout", "Account")>Logout</a></li>
                </ul>
            </div><!--/.navbar-collapse -->
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <div id="app-footer">
        <div class="container">
            <h6 class="text-center app-clr-lightgray">@ViewBag.AppAuthors</h6>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>