@{
    ViewBag.AppTitleAcro = "LOLSA";
    ViewBag.AppTitleFull = "LoL Statisics Archive";
    ViewBag.AppAuthors = "Loomis & McDonald";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content=@ViewBag.AppTitleFull>
    <meta name="author" content=@ViewBag.AppAuthors>

    <title>@ViewBag.AppTitleAcro</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Application core CSS -->
    <link href="~/Content/base-theme.css" rel="stylesheet">

</head>
<body class="app-fill-mediumgray" role="document">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">@ViewBag.AppTitleFull</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href=@Url.Action("Index", "Home")>Home</a></li>
                    <li><a href=@Url.Action("Index", "Account")>Account</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">Analysis <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href=@Url.Action("Index", "Analysis")>Action A</a></li>
                            <li><a href=@Url.Action("Index", "Analysis")>Action B</a></li>
                            <li><a href=@Url.Action("Index", "Analysis")>Action C</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.navbar-collapse -->
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <div id="app-footer">
        <div class="container">
            <h6 class="text-center app-clr-lightgray">@ViewBag.AppAuthors</h6>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required:false)
</body>
</html>